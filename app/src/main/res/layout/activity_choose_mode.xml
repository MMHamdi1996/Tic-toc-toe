<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseModeActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/twoNdGameButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/green"
        android:text="دو نفره"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="200dp"
        app:layout_constraintEnd_toEndOf="@+id/ticTacToeTextView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/ticTacToeTextView"
        app:layout_constraintTop_toBottomOf="@+id/oneNdGameButton" />

    <ImageView
        android:id="@+id/ticTocToeImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tictactoe"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/ticTacToeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="cursive"
        android:text="tic tac toe"
        android:textColor="@color/green"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ticTocToeImageView"
        app:layout_constraintStart_toStartOf="@+id/ticTocToeImageView"
        app:layout_constraintTop_toBottomOf="@+id/ticTocToeImageView" />

    <Button
        android:id="@+id/oneNdGameButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/green"
        android:text="یک نفره"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="200dp"
        app:layout_constraintEnd_toEndOf="@+id/ticTacToeTextView"
        app:layout_constraintStart_toStartOf="@+id/ticTacToeTextView"
        app:layout_constraintTop_toBottomOf="@+id/ticTacToeTextView" />



</androidx.constraintlayout.widget.ConstraintLayout>